<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Judul Keranjang Belanja -->
    <TextView
        android:id="@+id/tvCartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keranjang Belanja"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <!-- Instruksi untuk Hapus Item -->
    <TextView
        android:id="@+id/tvCartInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ketuk item untuk menghapus dari keranjang"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#757575"
        android:layout_below="@id/tvCartTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <!-- ListView untuk Menampilkan Item di Keranjang -->
    <ListView
        android:id="@+id/listViewCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvCartInstruction"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:padding="8dp" />

</RelativeLayout>
